<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/shopify</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Ryczak13!</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">false</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.beerent.shopifyapi.model.users.UserModel"/>
        <mapping class="com.beerent.shopifyapi.model.products.ProductModel"/>
        <mapping class="com.beerent.shopifyapi.model.orders.OrderModel"/>
        <mapping class="com.beerent.shopifyapi.model.orders.OrderProductMap"/>
    </session-factory>
</hibernate-configuration>